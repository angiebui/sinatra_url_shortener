<div class="container">
  <h1>Shorten Your Url!</h1>

  <p><span id="new_url">
    <% if @new_url %>
      <%= @new_url.short_url %>
    <% end %>
  </span></p>

  <p><span id="errors">
    <% if @new_url%>
      <% if @new_url.errors.full_messages %>
      <%= @new_url.errors.full_messages.first %>
    <% end %>
    <% end %>
  </span></p>

  <form action="/urls" method="post">
    Shorten a url here: 
    <br>
    <input type="text" name="long_url">
    <input type="submit" value="Submit!">
  </form>

  <h5> Other Shortened URLs here:</h5>
  <ul>
    <% @url.each do |url| %>
      <li> <a href="<%=url.long_url%>"> <%=url.short_url %></a></li>
     <% end %>
    </ul>
</div>

