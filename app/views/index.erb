<div class="container">
    <form action="/urls" method="post">
      <input id="shorten_url" taborder="1" class="text" type="text" placeholder ="Paste your long url here" name="url" size="35">
      <input id="shorten_btn" class="button" type="submit" value="Shorten">
    </form>

      <% if @new_url %>
        <% if @new_url.valid? %>
        <p class="message">
          Your shortened url: <a href="/<%= @new_url.short_url%>" id="link" target="_blank"> skip.ly/<%= @new_url.short_url%></a></p>
        <% else %>
          <p id="error"><%= @new_url.errors.full_messages.first %></p>
        <% end %>
      <% end %>
    </p><br>
</div>

<div class="popular">
  <h5 id="title">Most Popular:</h5>
    <span><% @url.each do |url| %>
      <a id="short-url" href="/<%= url.short_url%>" target="_blank">skip.ly/<%= url.short_url%></a>
      <a id="click-count"><%= url.click_count %> clicks</a><br>
    <% end %></span>
</div>
</body>






